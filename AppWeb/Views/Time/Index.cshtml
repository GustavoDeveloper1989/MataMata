@model IEnumerable<AppWeb.Models.TimeModel>

@{
    ViewBag.Title = "Index";
}

<h2 style="color:white"><b>Cadastro de times no sistema</b></h2>

<p style="color:white">
    @Html.ActionLink("Cadastrar novo time", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <b style="color:white">Nome da equipe</b>
        </th>
        <th>
            <b style="color:white">Foto do escudo</b> 
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <b style="color:white"> @Html.DisplayFor(modelItem => item.Nome)</b>
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.EscudoUrl)*@
            <img src="@item.EscudoUrl" style="max-width:100px" />
        </td>
        <td>
            <b>@Html.ActionLink("Editar", "Edit", new { id = item.Id })</b> |
            <b>@Html.ActionLink("Detalhes", "Details", new { id = item.Id })</b>  |
           <b>@Html.ActionLink("Deletar", "Delete", new { id = item.Id })</b> 
        </td>
    </tr>
}

</table>
